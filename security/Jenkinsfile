pipeline{
    agent any
    tools {
        maven '3.6.6'
        jdk 'jdk-20'
    }
    stages{
        stage('Build') {
           steps {
            sh 'mvn --version'
            sh 'java --version'
            sh 'mvn install'
           }
        }
        stage("Sonar quality check"){
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-token') {
                        sh 'cd security && mvn "-Dsonar.qualitygate=true" sonar:sonar'
                    }
                    timeout(time: 1, unit: 'HOURS') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK')
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                    }
                }
            }
        }
    }
}